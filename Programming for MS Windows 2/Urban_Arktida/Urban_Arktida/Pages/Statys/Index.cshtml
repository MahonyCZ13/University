@page
@model Urban_Arktida.Pages.Statys.IndexModel

@{
    ViewData["Title"] = "Severské státy";
}

<h1>Severské státy</h1>

<p>
    <a asp-page="Create">Nový záznam</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staty[0].Nazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staty[0].Rozloha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staty[0].Obyvatelstvo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staty) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rozloha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obyvatelstvo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Cid">Upravit</a> |
                <a asp-page="./Details" asp-route-id="@item.Cid">Detaily</a> |
                <a asp-page="./Delete" asp-route-id="@item.Cid">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>
